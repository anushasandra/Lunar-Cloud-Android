<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/guide_bg_01"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/relative_for_search"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="200dp"
        android:background="#66000000" >

        <Button
            android:id="@id/sign_signin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_for_sign_in"
            android:text="@string/invite_signin"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/about_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>